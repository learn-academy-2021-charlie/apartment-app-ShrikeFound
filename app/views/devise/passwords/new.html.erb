<div class=" w-10/12 max-w-6xl mx-auto font-mono ">
  <div class="pt-48 pb-10 min-h-screen">
<h1>Forgot your password?</h1>

<div class=" mx-auto w-max bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class: "label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"text-input" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class:"button yellow" %>
  </div>
<% end %>
</div>

<div class="w-max mx-auto style-nav-links">
<%= render "devise/shared/links" %>
</div>

</div>
</div>